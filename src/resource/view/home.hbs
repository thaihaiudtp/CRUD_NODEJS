<div class="mt-3 mb-3">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-3">
            <div class="card card-margin">
                <a href="/courses/{{this.slug}}">
                    <img src="https://img.youtube.com/vi/{{this.image}}/hqdefault.jpg" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" style=" text-decoration: none">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text text-truncate-multiline">{{this.description}}</p>
                    <a href="/courses/{{this.slug}}" style=" text-decoration: none" class="btn btn-primary">Learn Course</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>